<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FreeMusic</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <header>
            <h1>FreeMusic</h1>
        </header>
        <main id="albums-container">
            <!-- Albums will be dynamically generated here -->
        </main>
    </div>
    <script>
        // Function to fetch music albums
        async function fetchMusicAlbums() {
            try {
                const response = await fetch('/api/albums'); // Assuming you have an API endpoint to fetch albums
                const albums = await response.json();
                const albumsContainer = document.getElementById('albums-container');

                // Generate HTML for each album
                albums.forEach(album => {
                    const albumDiv = document.createElement('div');
                    albumDiv.classList.add('album');

                    const img = document.createElement('img');
                    img.src = album.thumbnail;
                    img.alt = album.name;

                    const h2 = document.createElement('h2');
                    h2.textContent = album.name;

                    albumDiv.appendChild(img);
                    albumDiv.appendChild(h2);
                    albumsContainer.appendChild(albumDiv);
                });
            } catch (error) {
                console.error('Error fetching music albums:', error);
            }
        }

        // Call the function to fetch and display music albums when the page loads
        window.onload = fetchMusicAlbums;
    </script>
</body>
</html>
